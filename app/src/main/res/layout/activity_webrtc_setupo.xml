<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="webrtc_Setup"
            type="com.example.test_application_for_elder_project.Webrtc_setupoKt" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".webrtc_setup">

        <!-- Remote Video View (Top Half) -->
        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/remote_video_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="81dp"
            android:background="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/local_video_view" />

        <!-- Local Video View (Bottom Half) -->
        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/local_video_view"
            android:layout_width="418dp"
            android:layout_height="260dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="107dp"
            android:background="@android:color/black"
            app:layout_constraintBottom_toTopOf="@id/remote_video_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.297" />

        <!-- Timer -->
        <TextView
            android:id="@+id/timer"
            android:layout_width="122dp"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="320dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Word Display -->
        <TextView
            android:id="@+id/word"
            android:layout_width="251dp"
            android:layout_height="57dp"
            android:layout_marginStart="144dp"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="354dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Hang Up Button -->
        <ImageButton
            android:id="@+id/btn_hangup"
            android:layout_width="141dp"
            android:layout_height="64dp"
            android:layout_marginBottom="4dp"
            android:background="@android:color/transparent"
            android:contentDescription="Hang Up"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
